{
  "name": "@canlooks/lotus",
  "version": "1.0.0",
  "author": "C.CanLiang <canlooks@gmail.com>",
  "description": "The simplest implementation of micro-frontend based on react",
  "license": "MIT",
  "keywords": [
    "vite",
    "vite plugin",
    "micro frontend",
    "react"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/canlooks/lotus",
  "repository": {
    "type": "git",
    "url": "https://github.com/canlooks/lotus"
  },
  "bugs": {
    "url": "https://github.com/canlooks/lotus/issues",
    "email": "canlooks@gmail.com"
  },
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./vite": {
      "types": "./vite/index.d.ts",
      "import": "./vite/index.js",
      "require": "./vite/index.cjs"
    }
  },
  "scripts": {
    "clean": "npx shx rm -rf dist",
    "build": "tsc -p tsconfig.json -m esnext --outDir dist/esm & tsc -p tsconfig.json -m commonjs --outDir dist/cjs",
    "rebuild": "npm run clean && npm run build",
    "test:browser": "vite -c test/vite.config.mts",
    "test:node": "npx ts-node test/node.ts"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
